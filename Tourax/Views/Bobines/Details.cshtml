@model Tourax.Models.BobineModel

@{
    ViewData["Title"] = "Details";
}

<h1>Détails</h1>
<hr />
<div>
    <div class="form-group">
        <label class="control-label">Référence</label>
        <p>@Model.Reference</p>
    </div>
    <div class="form-group">
        <label class="control-label"></label>
        <p>@Model.Nom</p>
    </div>
    <div class="form-group">
        <label class="control-label">Matière</label>
        <p>@Model.LibelleMatiere</p>
    </div>
    <div class="row my-5">
        <div class="col-lg-6 col-md-12 schema">
            <div class="form-group">
                <p class="form-control" id="largeurExt" >@Model.LargeurExt</p>
            </div>
            <div class="form-group">
                <p class="form-control" id="largeurInt">@Model.LargeurInt</p>
            </div>
            <div class="form-group">
                <p class="form-control" id="diametreExt">@Model.DiametreExt</p>
            </div>
            <div class="form-group">
                <p class="form-control" id="diametreInt">@Model.DiametreInt</p>
            </div>
            <div class="form-group">
                <p class="form-control" id="moyeu">@Model.Moyeu</p>
            </div>
            <img src="~/img/bobineSchema.svg" alt="Schéma bobine dimension" />
        </div>
        <div class="col-lg-6 col-md-12 pl-lg-5">
            <div class="form-group row">
                <div class="col-6 pl-lg-3">
                    <label>Technique d'enroulement</label>
                    <div>
                        @Html.DisplayFor(model => model.Trancanage)
                        <label>Trancanage</label>
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Enroulement)
                        <label>Enroulement sur lui-même</label>
                    </div>
                </div>
                <div class="col-6">
                    <label>Consigne</label>
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="customSwitch1">
                        <label class="custom-control-label" for="customSwitch1"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Poids à vide</label>
                <p>@Model.PoidsAVide</p>
            </div>
            <div class="form-group">
                <label class="control-label">Poids maximum autorisé</label>
                <p>@Model.PoidsMaxAutorise</p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.IdBobine" class="btn btn-warning">Modifier</a>
        <a asp-action="Index">Retour</a>
    </div>
</div>
