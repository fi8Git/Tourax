<div class="row pb-4">
    <div class="col-lg-6 col-md-12 schema">
        <div>
            <div class="form-group">
                <input class="form-control largeurExtSchema" id="largeurExtFormDimension" placeholder="Largeur ext" type="number" min="1" required />
            </div>
            <div class="form-group">
                <input class="form-control largeurIntSchema" id="largeurIntFormDimension" placeholder="Largeur int" type="number" min="1" required />
            </div>
            <div class="form-group">
                <input class="form-control diametreExtSchema" id="diametreExtFormDimension" placeholder="Diamètre ext" type="number" min="1" required />
            </div>
            <div class="form-group">
                <input class="form-control diametreIntSchema" id="diametreIntFormDimension" placeholder="Diamètre int" type="number" min="1" required />
            </div>
            <div class="form-group">
                <input class="form-control moyeuSchema" id="moyeuFormDimension" placeholder="Moyeu" type="number" min="1" required />
            </div>
            <img src="~/img/bobineSchema.svg" alt="Schéma bobine dimension" />
        </div>
    </div>
    <div class="col-lg-6 col-md-12 pl-lg-5">
        <!-- fin modification -->
        <div class="form-group">
            <label>Poids à vide(en kg)</label>
            <input type="number" id="poidsBobVideFormDimension" class="form-control" />
        </div>
        <div class="form-group">
            <label>Poids max autorisé(en kg)</label>
            <input type="number" id="poidsBobMaxFormDimension" class="form-control" />
        </div>
        <div class="form-group">
            <label>Technique d'enroulement</label>
            <select name="enroulement" id="enroulementCableFormDimension" class="form-control">
                <option value="trancanage" selected>Trancanage</option>
                <option id="enroulementSurLuiCableFormDimension" value="enroulementSurLui" class="hidden">Enroulement sur lui-même</option>
            </select>
        </div>
    </div>
</div>
